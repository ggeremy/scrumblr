extends layout

block body
	- if (locals.demo)
		div.notice-bar this is a demo board. to make a private board, go to <a href="/demo">/demo</a>

	h1= pageTitle
	
	//div.config
	//	i.fa.fa-cog.fa-lg.faded-icon
	
	div.board-outline
		div#board
			div#board-doodles
			image#marker(src='images/marker.png')
			image#eraser(src='images/eraser.png')


			table#board-table.board-table
				tr
					td#icon-col(width='1%')
						image#add-col.col-icon(width='20', height='20', src='images/icons/iconic/raster/black/plus_alt_32x32.png')
						image#delete-col.col-icon(width='20', height='20', src='images/icons/iconic/raster/black/minus_alt_32x32.png')


	div.buttons
		i#white-card.fa.fa-plus-circle.fa-2x.bottom-icon
		span(style='color: blue;')
			i#blue-card.fa.fa-plus-circle.fa-2x.bottom-icon
		span(style='color: green;')
			i#green-card.fa.fa-plus-circle.fa-2x.bottom-icon
		span(style='color: goldenrod;')
			i#yellow-card.fa.fa-plus-circle.fa-2x.bottom-icon
		span(style='color: red;')
			i#pink-card.fa.fa-plus-circle.fa-2x.bottom-icon
		i#smallify.fa.fa-expand.fa-2x.bottom-icon
		i#export-json.fa.fa-floppy-o.fa-2x.bottom-icon
		i#import-modal.fa.fa-upload.fa-2x.bottom-icon
		i#template-modal.fa.fa-columns.fa-2x.bottom-icon


	div.stickers
		div.sticker#sticker-red
		div.sticker#sticker-blue
		div.sticker#sticker-yellow
		div.sticker#sticker-green
		br
		div.sticker#sticker-pink
		div.sticker#sticker-lightblue
		div.sticker#sticker-orange
		div.sticker#sticker-purple
		//div.sticker#sticker-silverstar
		//div#addsticker
		br
		div.sticker#nosticker
		//br
		//div.sticker#sticker-gold
		//	image(src="/images/stickers/sticker-gold.png")
		//div.sticker#sticker-bluestar
		//	image(src="/images/stickers/sticker-bluestar.png")
		//div.sticker#sticker-silverstar
		//	image(src="/images/stickers/sticker-silverstar.png")
		//div.sticker#sticker-redstar
		//	image(src="/images/stickers/sticker-redstar.png")

	div.rows
		div.names
			p connected:
			//image#user-icon(src="/images/icons/cc/black/png/user_icon&16.png")
			input#yourname-input
			span.you-text (you)
			ul#names-ul

	div#import-dialog.modal
		div.modal-content
			div.modal-header
				span.modal-title Import JSON file
				span#import-close.modal-close &times;
			div.modal-body
				input(type="file")#import-input
			div.modal-footer
				i#import-json.fa.fa-upload.fa-2x.faded-icon

	div#template-dialog.modal
		div.modal-content
			div.modal-header
				span.modal-title Choose template
				span#template-close.modal-close &times;
			div.modal-body
				select#template-select
					option Empty
					option(value="scrumboard") Scrum Board
					option(value="pi") PI Planning
					option(value="startstopcontinue") Start/Stop/Continue
					option(value="madsadglad") Mad/Sad/Glad
					option(value="prosandcons") Pros and Cons

